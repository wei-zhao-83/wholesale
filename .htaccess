# Use PHP5.3 as default
AddHandler application/x-httpd-php53 .php
<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteCond %{REQUEST_URI} ^/system.*
	RewriteRule ^(.*)$ index.php?/$1 [L]
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.+)$ index.php?/$1 [L]
</IfModule>
